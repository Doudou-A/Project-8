{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action' : path('task_create')}) }}

		{{ form_row(form.createAt, {'label' : "Date"}) }}
		{{ form_row(form.title, {'label' : "Titre"}) }}
		{{ form_row(form.content, {'label' : "Contenu"}) }}

		<button type="submit" value="Ajouter" class="btn btn-success pull-right">Ajouter</button>
		{{ form_end(form) }}

		<a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
	</div>
{% endblock %}
